{
  "name": "erasys/openapi-php",
  "type": "library",
  "description": "Open API 3.0 builder and validation library for PHP that helps you write valid specs.",
  "keywords": [
    "openapi",
    "openapi3",
    "swagger",
    "swagger3",
    "oas",
    "oai",
    "illuminate",
    "laravel"
  ],
  "homepage": "http://github.com/erasys/openapi-php",
  "support": {
    "issues": "https://github.com/erasys/openapi-php/issues"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Javi Aguilar",
      "homepage": "https://itsjavi.com/",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/contracts": "^10.14.1",
    "symfony/yaml": "^5.4 || ^6.0",
    "justinrainbow/json-schema": "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "erasys\\OpenApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "erasys\\OpenApi\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "archive": {
    "exclude": [
      "/tests/",
      ".editorconfig",
      ".gitattributes",
      ".gitignore",
      ".travis.yml",
      "phpcs.xml",
      "phpunit.xml"
    ]
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs",
      "vendor/bin/phpunit"
    ],
    "cs-fix": "vendor/bin/phpcbf"
  }
}
